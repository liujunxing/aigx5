  "compilerOptions": {
    "composite": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["electron-vite/node"]
  },
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*", 
    "src/main/**/*", 
    "src/preload/**/*",
    "src/shared/**/*"
  ]
}
